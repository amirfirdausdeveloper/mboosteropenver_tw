<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_marginTop="15dp"
        android:background="@drawable/customlayouttopgrey"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vouchercode"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/vstatus"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/customlayoutbottomwhite">


        <TextView
            android:id="@+id/vamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/vexpirydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vamount"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/vuseddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vexpirydate"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />



    </RelativeLayout>

</RelativeLayout>