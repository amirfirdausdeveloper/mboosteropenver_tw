<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/voucher"
                android:textColor="@color/colorbutton"
                android:textSize="@dimen/toolbars_text" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/conversion_voucher_h"
                android:layout_marginTop="@dimen/conversion_icon_space"
                android:layout_marginStart="@dimen/conversion_voucher_side_padding"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/conversion_voucher_icon"
                    android:layout_height="@dimen/conversion_voucher_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_ev75_tw"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/conversion_count_padding"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/select_ev10_container"
                        android:layout_width="@dimen/conversion_voucher_count_container_w"
                        android:layout_height="@dimen/conversion_count_h"
                        android:layout_marginStart="@dimen/conversion_count_m"
                        android:layout_marginEnd="@dimen/conversion_count_m"
                        android:paddingStart="@dimen/conversion_count_padding"
                        android:paddingEnd="@dimen/conversion_count_padding"
                        android:background="@mipmap/button_orange_bg">

                        <TextView
                            fontPath="fonts/gotham_book.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/select_voucher_selected"
                            android:textSize="@dimen/conversion_text"
                            />

                        <TextView
                            android:id="@+id/select_ev10_count"
                            android:layout_width="@dimen/conversion_voucher_count_w"
                            android:layout_height="wrap_content"
                            android:text="@string/conversion_default_0pcs"
                            android:textSize="@dimen/conversion_text"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            fontPath="fonts/gotham_book_bold.ttf"/>

                        <ImageView
                            android:layout_width="@dimen/conversion_dropdown_icon"
                            android:layout_height="@dimen/conversion_dropdown_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/conversion_icon_space"
                            android:src="@mipmap/arrow_down_white"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/conversion_count_m"
                        android:layout_marginEnd="@dimen/conversion_count_m"
                        android:paddingStart="@dimen/conversion_count_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/select_ev10_available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            fontPath="fonts/gotham_book_bold.ttf"
                            android:textSize="@dimen/conversion_text"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/conversion_voucher_h"
                android:layout_marginTop="@dimen/conversion_icon_space"
                android:layout_marginStart="@dimen/conversion_voucher_side_padding"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/conversion_voucher_icon"
                    android:layout_height="@dimen/conversion_voucher_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_ev225_tw"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/conversion_count_padding"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/select_ev30_container"
                        android:layout_width="@dimen/conversion_voucher_count_container_w"
                        android:layout_height="@dimen/conversion_count_h"
                        android:layout_marginStart="@dimen/conversion_count_m"
                        android:layout_marginEnd="@dimen/conversion_count_m"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/conversion_count_padding"
                        android:paddingEnd="@dimen/conversion_count_padding"
                        android:background="@mipmap/button_orange_bg">

                        <TextView
                            fontPath="fonts/gotham_book.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/select_voucher_selected"
                            android:textSize="@dimen/conversion_text"
                            />

                        <TextView
                            android:id="@+id/select_ev30_count"
                            android:layout_width="@dimen/conversion_voucher_count_w"
                            android:layout_height="wrap_content"
                            android:text="@string/conversion_default_0pcs"
                            android:textSize="@dimen/conversion_text"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            fontPath="fonts/gotham_book_bold.ttf"/>

                        <ImageView
                            android:layout_width="@dimen/conversion_dropdown_icon"
                            android:layout_height="@dimen/conversion_dropdown_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/conversion_icon_space"
                            android:src="@mipmap/arrow_down_white"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/conversion_count_m"
                        android:layout_marginEnd="@dimen/conversion_count_m"
                        android:paddingStart="@dimen/conversion_count_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/select_ev30_available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            fontPath="fonts/gotham_book_bold.ttf"
                            android:textSize="@dimen/conversion_text"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/conversion_voucher_h"
                android:layout_marginTop="@dimen/conversion_icon_space"
                android:layout_marginStart="@dimen/conversion_voucher_side_padding"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/conversion_voucher_icon"
                    android:layout_height="@dimen/conversion_voucher_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_ev375_tw"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/conversion_count_padding">

                    <LinearLayout
                        android:id="@+id/select_ev50_container"
                        android:layout_width="@dimen/conversion_voucher_count_container_w"
                        android:layout_height="@dimen/conversion_count_h"
                        android:layout_marginStart="@dimen/conversion_count_m"
                        android:layout_marginEnd="@dimen/conversion_count_m"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/conversion_count_padding"
                        android:paddingEnd="@dimen/conversion_count_padding"
                        android:background="@mipmap/button_orange_bg">

                        <TextView
                            fontPath="fonts/gotham_book.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/select_voucher_selected"
                            android:textSize="@dimen/conversion_text"
                            />

                        <TextView
                            android:id="@+id/select_ev50_count"
                            android:layout_width="@dimen/conversion_voucher_count_w"
                            android:layout_height="wrap_content"
                            android:text="@string/conversion_default_0pcs"
                            android:textSize="@dimen/conversion_text"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            fontPath="fonts/gotham_book_bold.ttf"/>

                        <ImageView
                            android:layout_width="@dimen/conversion_dropdown_icon"
                            android:layout_height="@dimen/conversion_dropdown_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/conversion_icon_space"
                            android:src="@mipmap/arrow_down_white"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/conversion_count_m"
                        android:layout_marginEnd="@dimen/conversion_count_m"
                        android:paddingStart="@dimen/conversion_count_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/select_ev50_available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            fontPath="fonts/gotham_book_bold.ttf"
                            android:textSize="@dimen/conversion_text"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/voucher_divider_top"
                android:layout_marginStart="@dimen/conversion_voucher_side_padding"
                android:layout_marginEnd="@dimen/conversion_voucher_side_padding"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/conversion_total_top_m"
                android:layout_marginRight="@dimen/conversion_right_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/total_quantity_allow_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/select_voucher_total_allow"
                        android:textSize="@dimen/conversion_text"
                        android:gravity="right"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                    <TextView
                        android:id="@+id/total_quantity_allow_text"
                        android:layout_width="@dimen/conversion_total_title_w"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/voucher_select_summary_count_p"
                        android:gravity="right"
                        android:text="0"
                        android:textSize="@dimen/conversion_text"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/total_quantity_selected_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/select_voucher_selected_quantity"
                        android:textSize="@dimen/conversion_text"
                        android:gravity="right"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                    <TextView
                        android:id="@+id/total_quantity_selected_text"
                        android:layout_width="@dimen/conversion_total_title_w"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/voucher_select_summary_count_p"
                        android:gravity="right"
                        android:text="0"
                        android:textSize="@dimen/conversion_text"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/total_value_allow_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/select_voucher_selected_value_allow"
                        android:textSize="@dimen/conversion_text"
                        android:gravity="right"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                    <TextView
                        android:id="@+id/total_value_allow_text"
                        android:layout_width="@dimen/conversion_total_title_w"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingEnd="@dimen/voucher_select_summary_count_p"
                        android:text="0"
                        android:textSize="@dimen/conversion_text"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/total_value_select_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/select_voucher_total_value"
                        android:textSize="@dimen/conversion_text"
                        android:gravity="right"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                    <TextView
                        android:id="@+id/total_value_select_text"
                        android:layout_width="@dimen/conversion_total_title_w"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/voucher_select_summary_count_p"
                        android:gravity="right"
                        android:text="RM 0.00"
                        android:textSize="@dimen/conversion_text"
                        fontPath="fonts/gotham_book_bold.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/procut_list_ev_ex_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_country_info_h"
                    android:gravity="right"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_list_ev_ex_icon"
                        android:layout_width="@dimen/item_country_info_icon"
                        android:layout_height="@dimen/item_country_info_icon"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/taiwan_icon"/>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/product_list_ev_ex_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center"
                        android:paddingEnd="@dimen/voucher_select_summary_count_p"
                        android:text="Total Value : NTD 0"
                        android:textSize="@dimen/item_country_info_text"
                        android:autoSizeMinTextSize="@dimen/item_country_info_text_min"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/select_voucher_save"
                fontPath="fonts/gotham_book_bold.ttf"
                android:layout_width="@dimen/voucher_save_btn_w"
                android:layout_height="@dimen/voucher_save_btn_h"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/voucher_save_m_top"
                android:background="@mipmap/button_orange_bg"
                android:text="@string/submit"
                android:textAllCaps="false" />

        </LinearLayout>



    </ScrollView>

</LinearLayout>