<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/customlayout2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/end"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/list"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentEnd="true"
                android:text="Subshippping:"
                android:textSize="13dp"
                android:id="@+id/subshiping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentEnd="true"
                android:text="subtotal:"
                android:textSize="13dp"
                android:layout_below="@+id/subshiping"
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_toStartOf="@+id/end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvsubshiping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/handling_amp_shipping_charges"
                android:textSize="13dp" />

            <TextView
                android:layout_alignParentEnd="true"
                android:text="@string/subtotal"
                android:textSize="13dp"
                android:layout_below="@+id/tvsubshiping"
                android:id="@+id/tvsubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>